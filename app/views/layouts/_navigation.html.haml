= link_to "Release Packager", root_path, :class => 'brand'

.nav-collapse
  %ul.nav.pull-left
    %li{:class => controller.controller_name == 'releases' ? 'active' : ''}
      = link_to('Releases', releases_path)
    %li{:class => controller.controller_name == 'system_configs' ? 'active' : ''}
      = link_to('Configs', system_configs_path)

%ul.nav.pull-right
  - if user_signed_in?
    %li
      = link_to 'Logout', destroy_user_session_path, :method=>'delete'
  - else
    %li
      = link_to 'Login', new_user_session_path
  - if user_signed_in?
    %li
      = link_to 'Edit account', edit_user_registration_path
    - if current_user.has_role? :admin
      %li
        = link_to 'Admin', users_path
  - else
    %li
      = link_to 'Sign up', new_user_registration_path
