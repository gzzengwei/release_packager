%h2
  Config

= simple_form_for(@system_config, :html => {:class => "form-horizontal"}) do |f|
  = f.error_notification
 
  %fieldset 
    .row
      .span12
        .inputs                
          = f.input :repo_name, :input_html => { :class => 'span6'}
      .span12
        .inputs                
          = f.input :repo_dir, :input_html => { :class => 'span6'}
      .span12
        .inputs                
          = f.input :repo_branch, :input_html => { :class => 'span6'}
      .span12
        .inputs                
          = f.input :package_dir, :input_html => { :class => 'span6'}

  %fieldset      
    .actions
      = f.button :submit, "Save", :class=> 'btn btn-primary', :disabled_with => 'Please Wait'
